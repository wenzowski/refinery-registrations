<%= form_for [:admin, @child_registration] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
          :object => @child_registration,
          :include_object_name => true
        } %>
  
  <div class='field'>
    <%= f.label :registration_id -%>
    <%= f.text_field :registration_id, :class => 'larger widest'  -%>
  </div>
  
  <div class='field'>
    <%= f.label :child_id -%>
    <%= f.text_field :child_id  -%>
  </div>
  
  <div class='field'>
    <%= f.label :educational_stage_id -%>
    <%= f.text_field :educational_stage_id  -%>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('delete', :scope => 'admin.child_registrations.child_registration'),
                :delete_confirmation => t('message', :scope => 'shared.admin.delete')
              } %>
<% end -%>
