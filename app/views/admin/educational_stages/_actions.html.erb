<ul>
  <% if Admin::EducationalStagesController.searchable? %>
    <li>
      <%= render :partial => "/shared/admin/search",
                  :locals => {
                    :url => admin_educational_stages_path
                  } %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), new_admin_educational_stage_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? and Admin::EducationalStagesController.sortable? and EducationalStage.count > 1 %>
  <li>
    <%= link_to t('.reorder', :what => "Educational Stages"),
                 admin_educational_stages_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Educational Stages"),
                 admin_educational_stages_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>