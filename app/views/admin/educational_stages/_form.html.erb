<%= form_for [:admin, @educational_stage] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
          :object => @educational_stage,
          :include_object_name => true
        } %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest'  -%>
  </div>
  <div class='field'>
    <%= f.label :reduced_registration_amount -%>
    <%= f.text_field :reduced_registration_amount, :class => 'larger widest'  -%>
  </div>
  <div class='field'>
    <%= f.label :regular_registration_amount -%>
    <%= f.text_field :regular_registration_amount, :class => 'larger widest'  -%>
  </div>

  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('delete', :scope => 'admin.educational_stages.educational_stage'),
                :delete_confirmation => t('message', :scope => 'shared.admin.delete', :title => @educational_stage.name)
              } %>
<% end -%>
