<% content_for :body_content_title do %>
  <%= @educational_stage.name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @educational_stage.name %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="educational_stages">
      <% @educational_stages.each do |educational_stage| %>
        <li>
          <%= link_to educational_stage.name, educational_stage_path(educational_stage) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
