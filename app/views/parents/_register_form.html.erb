<%= form_for :user, :url => parents_path do |f| -%>
<%= render :partial => "/shared/admin/error_messages",
             :locals => {
               :object => user,
               :include_object_name => true
             } %>

  <div class='field'>
    <%= f.label :username %>
    <%= f.text_field :username, :class => 'larger widest' %>
  </div>
  <div class='field'>
    <%= f.label :email %>
    <%= f.text_field :email, :class => 'larger widest' %>
  </div>
  <div class='field'>
    <%= f.label :password %>
    <%= f.password_field :password, :class => 'larger widest' %>
  </div>
  <div class='field'>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, :class => 'larger widest' %>
  </div>
  <%= hidden_field_tag 'callback_path', request.fullpath %>
  <%= render :partial => "/shared/admin/form_actions",
               :locals => {
                 :f => f,
                 :submit_continue => false,
                 :submit_button_text => t('sign_up', :scope => 'users.new'),
                 :hide_delete => true,
                 :hide_cancel => true
               }%>
  <% end -%>