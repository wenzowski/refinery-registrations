<% content_for :body_content_title do %>
  <%= @child.name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @child.name %>
    </p>
  </section>
  <section>
    <h1>Birth</h1>
    <p>
      <%=raw @child.birth %>
    </p>
  </section>
  <section>
    <h1>Gender</h1>
    <p>
      <%=raw @child.gender %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="children">
      <% @children.each do |child| %>
        <li>
          <%= link_to child.name, child_path(child) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
